from Base import all
import Image.Data.Matrix

polyglot java import org.enso.image.Io as Java_Io

read : (Text | File) -> Matrix
read location =
    path = case location of
        File.File _ -> location.path
        _ -> location
    Matrix.Matrix (Java_Io.read path)

write : (Text | File) -> Matrix -> Nothing
write location image =
    path = case location of
        File.File _ -> location.path
        _ -> location
    Java_Io.write path image.opencv_mat
